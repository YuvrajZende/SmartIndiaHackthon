{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/landing/components/ui/calendar.tsx",
    "src/landing/components/ui/chart.tsx", 
    "src/landing/components/ui/sidebar.tsx",
    "src/landing/components/ui/toaster.tsx",
    "src/landing/components/ui/toggle-group.tsx",
    "src/landing/components/ui/use-toast.ts",
    "src/landing/hooks/use-toast.ts",
    "src/landing/pages/Index.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}